<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="crm_lead_form_template" name="Lead Form">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h2>Create a New Lead</h2>
                <form action="/leads/form/submit" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" required="1" class="form-control" />
                    </div>
                    <div class="form-group mt-4">
                        <label for="partner_id">Partner</label>
                        <select name="partner_id" class="form-control">
                            <option value="">-- Select Partner --</option>
                            <t t-foreach="partners" t-as="partner">
                                <option t-att-value="partner.id"><t t-esc="partner.name"/></option>
                            </t>
                        </select>
                    </div>
                    <div class="form-group mt-4">
                        <label for="email_from">Email</label>
                        <input type="email" name="email_from" class="form-control" />
                    </div>
                    <div class="form-group mt-4">
                        <label for="expected_revenue">Expected Revenue</label>
                        <input type="text" name="expected_revenue" class="form-control" />
                    </div>
                    <div class="form-group mt-4">
                        <label for="probability">Probability</label>
                        <input type="number" name="probability" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary my-4">Submit</button>
                </form>
            </div>
        </t>
    </template>
</odoo>