<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="crm_lead_edit_template" name="CRM Lead">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h2>Edit Lead</h2>
                <form t-att-action="'/leads/%s/update' % lead.id" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" t-att-value="lead.name" required="1" class="form-control"/>
                    </div>

                    <div class="form-group mt-4">
                        <label for="partner_id">Partner</label>
                        <select name="partner_id" class="form-control">
                            <option value="">-- Select Partner --</option>
                            <t t-foreach="partners" t-as="partner">
                                <option t-att-value="partner.id"
                                        t-att-selected="partner.id == lead.partner_id.id">
                                    <t t-esc="partner.name"/>
                                </option>
                            </t>
                        </select>
                    </div>

                    <div class="form-group mt-4">
                        <label for="email_from">Email</label>
                        <input type="email" name="email_from" t-att-value="lead.email_from" class="form-control"/>
                    </div>

                    <div class="form-group mt-4">
                        <label for="expected_revenue">Expected Revenue</label>
                        <input type="text" name="expected_revenue" t-att-value="lead.expected_revenue" class="form-control"/>
                    </div>

                    <div class="form-group mt-4">
                        <label for="probability">Probability</label>
                        <input type="number" name="probability" t-att-value="lead.probability" class="form-control"/>
                    </div>

                    <button type="submit" class="btn btn-primary my-4">Update</button>
                </form>
            </div>
        </t>
    </template>
</odoo>
