<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="school_class_schedule_list" model="ir.ui.view">
            <field name="name">school.class.schedule.list</field>
            <field name="model">school.class.schedule</field>
            <field name="arch" type="xml">
                <list>
                    <field name="teacher_id" />
                    <field name="subject_id" />
                    <field name="classroom_id" />
                    <field name="start_time" />
                    <field name="end_time" />
                </list>
            </field>
        </record>

        <record id="school_class_schedule_form" model="ir.ui.view">
            <field name="name">school.class.schedule.form</field>
            <field name="model">school.class.schedule</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Where">
                                <field name="teacher_id" />
                                <field name="subject_id" />
                                <field name="classroom_id" />
                            </group>
                            <group string="When">
                                <field name="start_time" />
                                <field name="end_time" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>