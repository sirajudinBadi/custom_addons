<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="school_student_list" model="ir.ui.view">
            <field name="name">school.student.list</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">

                <list>
                    <field name="image_128" class="small-circle-img" widget="image"
                           options="{'preview_image': 'image_128'}"/>
                    <field name="enrollment_id"/>
                    <field name="full_name"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="classroom_id"/>
                    <field name="health_score"/>
                </list>
            </field>
        </record>

        <record id="school_student_form" model="ir.ui.view">
            <field name="name">school.student.form</field>
            <field name="model">school.student</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_student_complaint"
                                string="New Complaint"
                                type="object"
                                class="oe_highlight"
                        />
                        <button name="action_open_google"
                                string="Google"
                                type="object"
                                class="btn-primary"
                        />
                    </header>
                    <sheet>

                        <group>
                            <group string="Personal Information">

                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="email"/>
                                <field name="mobile"/>
                                <field name="gender"/>
                                <field name="birth_date"/>
                                <field name="classroom_id"/>
                                <!--                                <field name="is_monitor"/>-->
                            </group>

                            <group string="Residential Information">
                                <field name="current_address"/>
                                <field name="same_as_current"/>
                                <field name="permanent_address"/>
                            </group>

                            <group name="file_group" string="Legal Information">
                                <field name="image_128" class="small-circle-img" widget="image"
                                       options="{'preview_image': 'image_128'}"/>
                                <field name="file" filename="file_name"/>
                                <field name="file_name"/>
                            </group>

                            <group string="Parent Details">
                                <field name="father_name"/>
                                <field name="father_occupation"/>
                                <field name="mother_name"/>
                                <field name="mother_occupation"/>
                                <field name="parent_email"/>
                                <field name="parent_mobile"/>
                            </group>

                            <!--                            <group>-->
                            <!--                                <field name="health_score" />-->
                            <!--                                <field name="is_allergen" />-->
                            <!--                            </group>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="school_student_search" model="ir.ui.view">
            <field name="name">school.student.search</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <search>
                    <field name="enrollment_id"/>
                    <field name="full_name"/>

                    <filter string="Deleted" name="is_deleted" domain="[('active', '=', False)]"
                            context="{'include_deleted': True}"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                </search>
            </field>
        </record>

        <record id="school_student_kanban" model="ir.ui.view">
            <field name="name">school.student.kanban</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <!--                    <field name="image_128"/>-->
                    <!--                    <field name="enrollment_id"/>-->
                    <!--                    <field name="full_name"/>-->
                    <!--                    <field name="classroom_id"/>-->

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('school.student', 'image_128', record.id.value)"
                                         class="img img-fluid rounded-circle"
                                         alt="Student Image"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="full_name"/>
                                    </strong>
                                    <br/>
                                    <span>Enrollment:
                                        <field name="enrollment_id"/>
                                    </span>
                                    <br/>
                                    <span>Classroom:
                                        <field name="classroom_id"/>
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>