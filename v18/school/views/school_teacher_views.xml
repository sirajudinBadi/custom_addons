<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="school_teacher_list" model="ir.ui.view">
            <field name="name">school.teacher.list</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <list>
                    <field name="image_128" widget="image" class="small-circle-img" options="{'preview_image': 'image_128'}"/>
                    <field name="employment_id" />
                    <field name="full_name" />
<!--                    <field name="salary"/>-->
<!--                    <field name="last_name"/>-->
                    <field name="primary_subject"/>
                    <field name="group" />
                    <field name="classroom_id"/>
                </list>
            </field>
        </record>

        <record id="school_teacher_form" model="ir.ui.view">
            <field name="name">school.teacher.form</field>
            <field name="model">school.teacher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Basic Details">
                                <field name="image_128" widget="image" class="small-circle-img" options="{'preview_image': 'image_128'}" />
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="gender" />
                                <field name="join_date"/>
                                <field name="classroom_id"/>
                                <field name="primary_subject" />
                            </group>

                            <group string="Specification Details">
                                <field name="classroom_ids"/>
                                <field name="subject_ids"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="school_teacher_search" model="ir.ui.view">
            <field name="name">school.teacher</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <search>
                    <field string="Employment ID" name="employment_id" />
                    <field string="Full Name" name="full_name" />
                    <field string="Classroom" name="classroom_ids" />
                    <field string="Group" name="group" />

                    <filter string="Deleted" name="is_deleted" domain="[('active', '=', False)]" context="{'include_deleted': True}" />
                    <filter string="Active" name="active" domain="[('active', '=', True)]"  />
<!--                    <filter string="Class Teacher" name="is_class_teacher" domain="[('is_class_teacher', '=', True)]" />-->
                </search>
            </field>
        </record>


    </data>
</odoo>