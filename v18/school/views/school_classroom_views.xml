<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="school_classroom_list" model="ir.ui.view">
            <field name="name">school.classroom.list</field>
            <field name="model">school.classroom</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="location"/>
                </list>
            </field>
        </record>

        <record id="school_classroom_form" model="ir.ui.view">
            <field name="name">school.classroom.form</field>
            <field name="model">school.classroom</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Basic Information">
                                <field name="name"/>
                                <field name="location"/>
                            </group>

                            <group string="Representatives">
                                <field name="cls_monitor_id"/>
                                <field name="cls_teacher_id"/>
                            </group>

                            <group string="Details">
                                <field name="teacher_ids"/>
                                <field name="subject_ids"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="school_classroom_search" model="ir.ui.view">
            <field name="name">school.classroom.search</field>
            <field name="model">school.classroom</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>

                    <!--                    <filter string="Deleted" name="deleted" domain="[('is_deleted', '=', True)]" context="{'include_deleted': True}" />-->
                    <filter string="Deleted" name="deleted"
                            domain="[('is_deleted', '=', True)]"
                            context="{'include_deleted': True}"/>

                    <filter string="Active" name="active" domain="[('is_deleted', '=', False)]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>