<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="school_subject_list" model="ir.ui.view">
            <field name="name">school.subject.list</field>
            <field name="model">school.subject</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                </list>
            </field>
        </record>

        <record id="school_subject_form" model="ir.ui.view">
            <field name="name">school.subject.form</field>
            <field name="model">school.subject</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Subject Declaration">
                                <field name="name"/>
                                <field name="code"/>
                            </group>

                            <group string="Subject Specification">
                                <field name="classroom_ids"/>
                                <field name="teacher_ids"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

