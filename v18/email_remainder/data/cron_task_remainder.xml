<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <record id="ir_cron_task_remainder" model="ir.cron">
            <field name="name">Task Deadline Remainder</field>
            <field name="model_id" ref="model_task_timesheet_remainder"/>
            <field name="state">code</field>
            <field name="code">model.send_daily_remainders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall"
                   eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 04:30:00')"/>
            <field name="priority">1</field>
            <field name="active">True</field>
        </record>
</odoo>