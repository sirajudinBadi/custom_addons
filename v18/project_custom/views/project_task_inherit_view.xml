<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_task_form_inherit_dates" model="ir.ui.view">
            <field name="name">project.task.form.inherit.dates</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <!-- Add fields under the task form -->
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="date_start"/>
                    <field name="date_end"/>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_task_list" model="ir.ui.view">
            <field name="name">inherit.view.task.list</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.project_task_view_tree_main_base" />
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="default_order">name asc, priority desc, sequence, state, date_deadline asc, id desc</attribute>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_task_kanban" model="ir.ui.view">
            <field name="name">inherit.view.task.kanban</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban" />
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="attributes">
                    <attribute name="default_order">name asc, priority desc, sequence, state, date_deadline asc, id desc</attribute>
                </xpath>
            </field>
        </record>


