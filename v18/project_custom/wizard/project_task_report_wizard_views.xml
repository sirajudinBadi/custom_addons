<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="view_project_task_report_wizard_form" model="ir.ui.view">
            <field name="name">project.task.report.wizard.form</field>
            <field name="model">project.task.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Task XLSX Report">
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <footer>
                        <button string="Generate XLSX" type="object" name="generate_xlsx" class="btn-primary"/>
                        <button string="Generate PDF" type="object" name="generate_pdf" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
