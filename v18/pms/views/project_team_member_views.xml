<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="pms.project_team_members_list_view" model="ir.ui.view">
            <field name="name">pms.project.team.members.list.view</field>
            <field name="model">project.team.member</field>
            <field name="arch" type="xml">
                <list>
                    <field name="user_image" class="small-circle-img" widget="image"/>
                    <field name="name" />
                    <field name="gender" />
                    <field name="email" />
                    <field name="city_id" />
                    <field name="country_id" />
                </list>
            </field>
        </record>

        <record id="pms.project_team_members_form_view" model="ir.ui.view">
            <field name="name">pms.project.team.members.form.view</field>
            <field name="model">project.team.member</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Basic Information">
                                <field name="user_id" />
                                <field name="name" />
                                <field name="gender" />
                                <field name="birth_date" />
                                <field name="email" />
                                <field name="mobile" />
                            </group>

                            <group name="Address Information">
                                <field name="house_no" />
                                <field name="street" />
                                <field name="street2" />
                                <field name="country_id" />
                                <field name="state_id" />
                                <field name="city_id" />
                                <field name="zipcode" />
                            </group>

                            <group name="User Information">
                                <field name="user_image" widget="image" class="small-circle-img" />
                                <field name="bio_data" />
                                <field name="timesheet_ids" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pms.project_team_members_kanban_view" model="ir.ui.view">
            <field name="name">pms.project.team.members.kanban.view</field>
            <field name="model">project.team.member</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_view">
                <templates>
                    <t t-name="kanban-box" class="">
                        <div class="d-flex align-items-center gap-3 oe_kanban_global_click o_kanban_record ">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('project.team.member', 'user_image', record.id.value)"
                                     class="o_kanban_image_inner rounded-circle"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="text-muted"><field name="email"/></div>
                                <div><field name="country_id"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
            </field>
        </record>

        <record id="pms.project_team_members_search_view" model="ir.ui.view">
            <field name="name">pms.project.team.members.search.view</field>
            <field name="model">project.team.member</field>
            <field name="arch" type="xml">
                <search>
                    <field name="user_id" />
                    <field name="name" />
                    <field name="email" />
                    <field name="city_id" />

                    <filter name="filter_male" string="Male" domain="[('gender', '=', 'male')]" />
                    <filter name="filter_female" string="Female" domain="[('gender', '=', 'female')]" />
                </search>
            </field>
        </record>
    </data>
</odoo>