        <record id="server_action_open_multi_team_member" model="ir.actions.server">
            <field name="name">Add Member to Teams</field>
            <field name="model_id" ref="model_project_team"/> <!-- model_project_team from ir.model -->
            <field name="binding_model_id" ref="model_project_team"/>
            <field name="binding_type">action</field>
            <field name="state">code</field>
            <field name="code">
                action = {
                "type": "ir.actions.act_window",
                "res_model": "multi.team.member",
                "view_mode": "form",
                "target": "new",
                }
            </field>
        </record>


        <record id="action_add_member_to_teams" model="ir.actions.act_window">
            <field name="name">Add Member to Teams</field>
            <field name="res_model">multi.team.member</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

         <!--Add Star to multiple selected Tasks-->
        <record id="project_task_prioritize_task_server_action" model="ir.actions.server">
            <field name="name">Mark High Priority Task</field>
            <field name="model_id" ref="project.model_project_task" />
            <field name="binding_model_id" ref="project.model_project_task" />
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                records.action_set_high_priority_task()
            </field>
        </record>
