<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="pms.project_task_inherit_search_view" model="ir.ui.view">
            <field name="name">pms.project.task.inherit.search.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form_base"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <filter string="New Tasks" name="working_hours_open" domain="[('working_hours_open','&lt;=',5)]"/>
                </xpath>

                <xpath expr="//field[@name='date_assign']" position="attributes">
                    <attribute name="attrs">{'invisible': [('stage_id.name', '=', 'Done')]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="pms.project_task_inherit_form_view" model="ir.ui.view">
            <field name="name">pms.project.task.inherit.form.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="after">
                    <notebook>
                        <page string="Timesheets">
                            <field name="timesheet_ids" />
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

    </data>
</odoo>