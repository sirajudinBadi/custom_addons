        <record id="pms.project_inherit_team_field_form_view" model="ir.ui.view">
            <field name="name">pms.project.inherit.team.field.form.view</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="team_id"/>
                </xpath>

                <xpath expr="//page[@name='settings']" position="after">
                    <page string="Textual Description">
                        <group>
                            <field name="description_text" placeholder="Indexing speeds up data retrieval but slower data storage." />
                        </group>
                    </page>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Members">
                        <field name="member_ids" widget="many2many_kanban">
                            <kanban>
                                <field name="name"/>
                                <field name="gender"/>
                                <field name="user_image" widget="image" />
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_global_click">
                                            <img t-att-src="kanban_image('project.team.member', 'user_image', record.id.value)"
                                                 class="small-circle-img oe_avatar" alt="Member"/>
                                            <strong>
                                                <field name="name"/>
                                            </strong>
                                            <div>
                                                <field name="gender"/>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>