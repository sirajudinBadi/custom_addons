<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="portal_my_home_leave" name="Time Offs" customize_show="True" inherit_id="portal.portal_my_home" priority="100">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_client_category_enable" t-value="True"/>
            <t t-set="portal_alert_category_enable" t-value="True"/>
        </xpath>
        <div id="portal_client_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" style="height:64px;" t-value="'/portal_leave/static/src/img/holiday.png'"/>
                <t t-set="title">Your Time Offs</t>
                <t t-set="url" t-value="'/my/leaves'"/>
                <t t-set="text">See your leave history</t>
                <t t-set="placeholder_count" t-value="'order_count'"/>
            </t>
        </div>
    </template>

</odoo>