<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="report_generator.view_date_range_form" model="ir.ui.view">
            <field name="name">view.date.range.form</field>
            <field name="model">report.date.range</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <footer>
                            <button string="Generate PDF" type="object" name="print_report" class="btn-primary"/>
                            <button string="Cancel" special="cancel" class="btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>