<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_snippet_template" name="Product Snippet">
        <section class="product_section">
            <div class="container">
                <h1>Latest Products</h1>
                <owl-component name="owl_web_cybro.snippet"/>
            </div>
        </section>
    </template>
    <template id="product_component_snippet" inherit_id="website.snippets" name="Category Highlight Snippet">
        <xpath expr="//snippets[@id='snippet_groups']
" position="inside">
            <t t-snippet="owl_web_cybro.product_snippet_template"
               t-thumbnail="/owl_web_cybro/static/src/images/snippets/college.jpeg"/>
        </xpath>
    </template>
</odoo>
